@{
    ViewData["Title"] = "NewUser";
    Layout = "~/Views/Shared/_KSEBLayout.cshtml";
}
<style>
    :root {
        --surface-1: #f4f5f3;
        --surface-2: #fdf3cf;
        --panel: #ffffffee;
        --border: #d6d9de;
        --text: #1f2933;
        --muted: #6b7280;
        --primary: #2563eb;
        --success: #16a34a;
        --danger: #dc2626;
        --ease: cubic-bezier(0.25, 1, 0.5, 1);
    }

    * {
        box-sizing: border-box;
        font-family: Inter, system-ui, -apple-system, sans-serif;
        transition: all 0.4s var(--ease);
        border-radius: 0 !important;
    }

    body,
    html {
        margin: 0;
        padding: 0;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
        color: var(--text);
    }

    /* ✅ Same animation vibes */
    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-100%);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideRight {
        from {
            opacity: 0;
            transform: translateX(-50px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes fadeInScale {
        from {
            opacity: 0;
            transform: scale(0.98);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .anim-topbar {
        animation: slideDown 0.8s var(--ease) forwards;
    }

    .anim-sidebar {
        animation: slideRight 0.8s var(--ease) 0.2s forwards;
        opacity: 0;
    }

    .anim-page {
        animation: fadeInScale 0.8s ease-out 0.4s forwards;
        opacity: 0;
    }

    /* ✅ App shell */
    .app-shell {
        width: 100%;
        height: 100%;
        background: radial-gradient(1200px 600px at 90% 10%, var(--surface-2), transparent 60%), linear-gradient(135deg, var(--surface-1), #ffffff);
        display: flex;
        flex-direction: column;
    }

    /* ✅ Topbar */
    .topbar {
        height: 58px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 22px;
        border-bottom: 1px solid var(--border);
        flex-shrink: 0;
        background: transparent;
    }

    .topbar-left {
        display: flex;
        align-items: center;
        gap: 14px;
    }

    #hamburger {
        cursor: pointer;
        padding: 8px;
        font-size: 1.2rem;
        color: var(--text);
    }

    .top-logo {
        height: 32px;
        width: auto;
        object-fit: contain;
    }

    .nav-logo {
        height: 28px;
        width: auto;
        object-fit: contain;
    }

    /* ✅ Main layout */
    .app {
        display: flex;
        flex: 1;
        overflow: hidden;
    }

    /* ✅ Sidebar */
    .icon-rail {
        width: 200px;
        padding: 12px;
        border-right: 1px solid var(--border);
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(5px);
        transition: width 0.4s var(--ease);
        overflow: hidden;
    }

        .icon-rail.collapsed {
            width: 64px;
        }

    .rail-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 14px;
        color: var(--muted);
        cursor: pointer;
        white-space: nowrap;
        user-select: none;
    }

        .rail-item:hover,
        .rail-item.active {
            background: #fff;
            color: #000;
            font-weight: 600;
        }

    .icon-rail span {
        opacity: 1;
    }

    .icon-rail.collapsed span {
        opacity: 0;
        pointer-events: none;
    }

    /* Dropdown */
    .has-dropdown {
        flex-direction: column;
    }

    .rail-main {
        display: flex;
        align-items: center;
        gap: 12px;
        width: 100%;
    }

    .caret {
        margin-left: auto;
        font-size: 12px;
    }

    .rail-dropdown {
        width: 100%;
        margin-top: 6px;
        padding-left: 28px;
        display: none;
    }

    .has-dropdown.open .rail-dropdown {
        display: block;
    }

    .dropdown-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 8px 10px;
        font-size: 13px;
        color: var(--muted);
        cursor: pointer;
        user-select: none;
    }

        .dropdown-item:hover {
            background: #ffffffaa;
            color: #000;
        }

    /* ✅ Page area */
    .page-area {
        flex: 1;
        margin: 12px;
        background: rgba(255, 255, 255, 0.55);
        padding: 30px;
        overflow: auto;
    }

        .page-area::-webkit-scrollbar {
            display: none;
        }

    /* ✅ Header row */
    .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 18px;
        gap: 10px;
    }

    .page-title {
        margin: 0;
        font-size: 20px;
        font-weight: 700;
    }

    /* ✅ Buttons (NO Bootstrap) */
    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        border: 1px solid transparent;
        padding: 10px 14px;
        font-size: 14px;
        font-weight: 600;
        background: #fff;
        color: var(--text);
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
        user-select: none;
    }

        .btn:hover {
            transform: translateY(-1px);
            filter: brightness(1.02);
        }

    .btn-outline-dark {
        border: 1px solid var(--border);
        background: #fff;
        color: #111827;
    }

        .btn-outline-dark:hover {
            border-color: #111827;
        }

    .btn-outline-secondary {
        border: 1px solid var(--border);
        background: #fff;
        color: var(--muted);
    }

        .btn-outline-secondary:hover {
            border-color: var(--muted);
        }

    .btn-success {
        background: var(--success);
        border-color: var(--success);
        color: #fff;
    }

        .btn-success:hover {
            filter: brightness(1.05);
        }

    /* ✅ Form grid (NO Bootstrap row/col) */
    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 18px 28px;
        margin-top: 10px;
        max-width: 980px;
    }

    @@media (max-width: 900px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }

    .field label {
        display: block;
        font-size: 12px;
        color: var(--muted);
        margin-bottom: 6px;
        font-weight: 600;
    }

    .input,
    .select {
        width: 100%;
        border: 1px solid var(--border);
        padding: 11px 12px;
        font-size: 14px;
        outline: none;
        background: #fff;
    }

        .input:focus,
        .select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.12);
        }

    /* ✅ Switch Row */
    .switch-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 14px;
        border: 1px solid var(--border);
        padding: 10px 12px;
        background: #fff;
        height: 44px;
    }

        .switch-row span {
            color: var(--muted);
            font-size: 13px;
            font-weight: 600;
        }

    /* ✅ Custom Switch (NO Bootstrap) */
    .switch {
        position: relative;
        width: 44px;
        height: 24px;
    }

        .switch input {
            display: none;
        }

    .slider {
        position: absolute;
        inset: 0;
        background: rgba(107, 114, 128, 0.28);
        cursor: pointer;
    }

        .slider:before {
            content: "";
            position: absolute;
            width: 18px;
            height: 18px;
            left: 3px;
            top: 3px;
            background: #fff;
            box-shadow: 0 6px 14px rgba(0, 0, 0, 0.15);
            transition: 0.25s ease;
        }

    .switch input:checked + .slider {
        background: rgba(22, 163, 74, 0.35);
    }

        .switch input:checked + .slider:before {
            transform: translateX(20px);
        }

    /* ✅ Actions row */
    .form-actions {
        display: flex;
        justify-content: center;
        gap: 18px;
        margin-top: 18px;
        flex-wrap: wrap;
    }

    /* ✅ Toast (NO Bootstrap) */
    .toast-container {
        position: fixed;
        top: 18px;
        right: 18px;
        z-index: 9999;
        pointer-events: none;
    }

    .toast {
        pointer-events: auto;
        min-width: 220px;
        max-width: 320px;
        background: rgba(15, 23, 42, 0.92);
        color: #fff;
        padding: 12px 14px;
        border: 1px solid rgba(255, 255, 255, 0.12);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.22);
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        opacity: 0;
        transform: translateY(-10px);
        transition: all 0.35s var(--ease);
    }

        .toast.show {
            opacity: 1;
            transform: translateY(0);
        }

    .toast-close {
        cursor: pointer;
        opacity: 0.75;
        transition: all 0.2s ease;
    }

        .toast-close:hover {
            opacity: 1;
            transform: scale(1.05);
        }
</style>
<div class="page-header">
    <h4 class="page-title" id="pageTitle">User Creation</h4>


</div>

<form id="createForm">

    <div class="form-grid">

        <div class="field">
            <label>Employee ID</label>
            <input type="text" class="input" id="empId" placeholder="Employee ID">
        </div>

        <div class="field">
            <label>Full Name</label>
            <input type="text" class="input" id="fullName" placeholder="Full Name">
        </div>

        <div class="field">
            <label>Work Email</label>
            <input type="email" class="input" id="email" placeholder="user@company.com">
        </div>

        <div class="field">
            <label>Mobile Number</label>
            <input type="tel" class="input" id="mobile" placeholder="Mobile Number">
        </div>

        <div class="field">
            <label>Department</label>
            <select class="select" id="dept">
                <option>Select Department</option>
                <option>Maintenance</option>
                <option>Operations</option>
                <option>Engineering</option>
                <option>Stores</option>
                <option>Safety</option>
            </select>
        </div>

        <div class="field">
            <label>Site / Plant</label>
            <select class="select" id="site">
                <option>Select Site</option>
                <option>Plant A</option>
                <option>Plant B</option>
                <option>Warehouse</option>
            </select>
        </div>

        <div class="field">
            <label>EAM Role</label>
            <select class="select" id="role">
                <option>Select Role</option>
                <option>Maintenance Technician</option>
                <option>Maintenance Supervisor</option>
                <option>Asset Manager</option>
                <option>Planner</option>
                <option>EAM Administrator</option>
            </select>
        </div>

        <div class="field">
            <label>Asset Access Level</label>
            <select class="select" id="access">
                <option>Select Access</option>
                <option>View Only</option>
                <option>Work Orders</option>
                <option>Assets & Work Orders</option>
                <option>Full Asset Control</option>
            </select>
        </div>

        <div class="field">
            <label>Shift</label>
            <select class="select" id="shift">
                <option>General</option>
                <option>Morning</option>
                <option>Night</option>
                <option>Rotational</option>
            </select>
        </div>

        <div class="field">
            <label>User Active</label>
            <div class="switch-row">
                <span>User Active</span>
                <label class="switch">
                    <input id="active" type="checkbox" checked>
                    <span class="slider"></span>
                </label>
            </div>
        </div>

    </div>

    <div class="form-actions">
        <button type="reset" class="btn btn-outline-secondary" id="resetBtn">
            Cancel
        </button>
        <button type="submit" class="btn btn-success" id="submitBtn">
            Create User
        </button>
    </div>

</form>
<!-- ✅ Toast (NO Bootstrap) -->
<div class="toast-container">
    <div id="successToast" class="toast">
        <div id="toastText">Done</div>
        <i class="fa-solid fa-xmark toast-close" id="toastClose"></i>
    </div>
</div>


