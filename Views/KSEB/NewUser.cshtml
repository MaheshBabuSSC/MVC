@model MvcWebApiSwaggerApp.Models.Register
@{
    ViewData["Title"] = "NewUser";
    Layout = "~/Views/Shared/_KSEBLayout.cshtml";
}
<style>
    :root {
        --surface-1: #f4f5f3;
        --surface-2: #fdf3cf;
        --panel: #ffffffee;
        --border: #d6d9de;
        --text: #1f2933;
        --muted: #6b7280;
        --primary: #2563eb;
        --success: #16a34a;
        --danger: #dc2626;
        --ease: cubic-bezier(0.25, 1, 0.5, 1);
    }

    * {
        box-sizing: border-box;
        font-family: Inter, system-ui, -apple-system, sans-serif;
        transition: all 0.4s var(--ease);
        border-radius: 0 !important;
    }

    body,
    html {
        margin: 0;
        padding: 0;
        height: 100vh;
        width: 100vw;
        /* overflow: hidden; */
        color: var(--text);
    }

    /* ✅ Same animation vibes */
    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-100%);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideRight {
        from {
            opacity: 0;
            transform: translateX(-50px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes fadeInScale {
        from {
            opacity: 0;
            transform: scale(0.98);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .anim-topbar {
        animation: slideDown 0.8s var(--ease) forwards;
    }

    .anim-sidebar {
        animation: slideRight 0.8s var(--ease) 0.2s forwards;
        opacity: 0;
    }

    .anim-page {
        animation: fadeInScale 0.8s ease-out 0.4s forwards;
        opacity: 0;
    }

    /* ✅ App shell */
    .app-shell {
        width: 100%;
        height: 100%;
        background: radial-gradient(1200px 600px at 90% 10%, var(--surface-2), transparent 60%), linear-gradient(135deg, var(--surface-1), #ffffff);
        display: flex;
        flex-direction: column;
    }

    /* ✅ Page area */
    .page-area {
        flex: 1;
        margin: 12px;
        background: rgba(255, 255, 255, 0.85);
        padding: 30px;
        overflow: auto;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(214, 217, 222, 0.5);
    }

        .page-area::-webkit-scrollbar {
            display: none;
        }

    /* ✅ Header row */
    .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 28px;
        gap: 10px;
        padding-bottom: 15px;
        border-bottom: 1px solid rgba(214, 217, 222, 0.5);
    }

    .page-title {
        margin: 0;
        font-size: 20px;
        font-weight: 700;
    }

    /* ✅ Form grid (NO Bootstrap row/col) */
    .form-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 18px 28px;
        margin-top: 10px;
        max-width: 980px;
    }

    @@media (max-width: 900px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }

    .field {
        margin-bottom: 5px;
    }

        .field label {
            display: block;
            font-size: 12px;
            color: var(--muted);
            margin-bottom: 6px;
            font-weight: 600;
        }

    .input,
    .select {
        width: 100%;
        border: 1px solid var(--border);
        padding: 11px 12px;
        font-size: 14px;
        outline: none;
        background: #fff;
    }

        .input:focus,
        .select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.12);
        }

    /* ✅ Switch Row */
    .switch-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 14px;
        border: 1px solid var(--border);
        padding: 10px 12px;
        background: #fff;
        height: 44px;
    }

        .switch-row span {
            color: var(--muted);
            font-size: 13px;
            font-weight: 600;
        }

    /* ✅ Custom Switch (NO Bootstrap) */
    .switch {
        position: relative;
        width: 44px;
        height: 24px;
    }

        .switch input {
            display: none;
        }

    .slider {
        position: absolute;
        inset: 0;
        background: rgba(107, 114, 128, 0.28);
        cursor: pointer;
    }

        .slider:before {
            content: "";
            position: absolute;
            width: 18px;
            height: 18px;
            left: 3px;
            top: 3px;
            background: #fff;
            box-shadow: 0 6px 14px rgba(0, 0, 0, 0.15);
            transition: 0.25s ease;
        }

    .switch input:checked + .slider {
        background: rgba(22, 163, 74, 0.35);
    }

        .switch input:checked + .slider:before {
            transform: translateX(20px);
        }

    /* ✅ Buttons (NO Bootstrap) */
    .btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        border: 1px solid transparent;
        padding: 12px 18px;
        font-size: 14px;
        font-weight: 600;
        background: #fff;
        color: var(--text);
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
        user-select: none;
        transition: all 0.3s var(--ease);
    }

        .btn:hover {
            transform: translateY(-2px);
            filter: brightness(1.02);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

    .btn-outline-secondary {
        border: 1px solid var(--border);
        background: #fff;
        color: var(--muted);
    }

        .btn-outline-secondary:hover {
            border-color: var(--muted);
            color: var(--text);
        }

    .btn-success {
        background: var(--success);
        border-color: var(--success);
        color: #fff;
    }

        .btn-success:hover {
            filter: brightness(1.1);
            box-shadow: 0 8px 20px rgba(22, 163, 74, 0.3);
        }

    /* ✅ Actions row */
    .form-actions {
        display: flex;
        justify-content: center;
        gap: 18px;
        margin-top: 30px;
        padding-top: 25px;
        border-top: 1px solid rgba(214, 217, 222, 0.5);
        flex-wrap: wrap;
    }

    /* ✅ Toast (NO Bootstrap) */
    .toast-container {
        position: fixed;
        top: 18px;
        right: 18px;
        z-index: 9999;
        pointer-events: none;
    }

    .toast {
        pointer-events: auto;
        min-width: 220px;
        max-width: 320px;
        background: rgba(15, 23, 42, 0.95);
        color: #fff;
        padding: 14px 18px;
        border: 1px solid rgba(255, 255, 255, 0.12);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.25);
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        opacity: 0;
        transform: translateY(-10px);
        transition: all 0.35s var(--ease);
    }

        .toast.show {
            opacity: 1;
            transform: translateY(0);
        }

    .toast-success {
        background: rgba(21, 128, 61, 0.95);
        border-color: rgba(34, 197, 94, 0.3);
    }

    .toast-error {
        background: rgba(185, 28, 28, 0.95);
        border-color: rgba(239, 68, 68, 0.3);
    }

    .toast-icon {
        font-size: 18px;
    }

    .toast-close {
        cursor: pointer;
        opacity: 0.75;
        transition: all 0.2s ease;
    }

        .toast-close:hover {
            opacity: 1;
            transform: scale(1.05);
        }

    /* ✅ Message alerts */
    .message-alert {
        padding: 14px 18px;
        margin-bottom: 25px;
        border: 1px solid transparent;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 14px;
        border-radius: 8px !important;
    }

    .alert-success {
        background: #dcfce7;
        border-color: #86efac;
        color: #166534;
    }

    .alert-error {
        background: #fee2e2;
        border-color: #fca5a5;
        color: #991b1b;
    }

    /* ✅ Loading spinner */
    .spinner {
        display: inline-block;
        width: 18px;
        height: 18px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        border-top-color: #fff;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }
</style>

<div class="page-header anim-page">
    <h4 class="page-title" id="pageTitle">User Creation</h4>
</div>

<!-- Success/Error Messages -->
@if (ViewBag.Message != null)
{
    <div class="message-alert alert-success">
        <i class="fa-solid fa-check-circle"></i>
        @ViewBag.Message
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="message-alert alert-error">
        <i class="fa-solid fa-exclamation-circle"></i>
        @ViewBag.Error
    </div>
}

<form id="createForm" method="post">
    <!-- OTP HIDDEN FIELDS (COMMENTED OUT) -->
    <!--
    <input type="hidden" name="IsOtpSent" value="0" />
    <input type="hidden" name="UserId" value="0" />
    -->

    <div class="form-grid">

        <div class="field">
            <label>Employee ID</label>
            <input type="text" class="input" name="EmployeeId" required
                   value="@(Model?.EmployeeId ?? "")" placeholder="Employee ID">
        </div>

        <div class="field">
            <label>Full Name</label>
            <input type="text" class="input" name="FullName" required
                   value="@(Model?.FullName ?? "")" placeholder="Full Name">
        </div>

        <div class="field">
            <label>Username</label>
            <input type="text" class="input" name="UserName" required
                   value="@(Model?.UserName ?? "")" placeholder="Username">
        </div>

        <div class="field">
            <label>Work Email</label>
            <input type="email" class="input" name="Email" required
                   value="@(Model?.Email ?? "")" placeholder="user@company.com">
        </div>

        <div class="field">
            <label>Password</label>
            <input type="password" class="input" name="Password" required
                   placeholder="••••••••" minlength="6">
        </div>

        <div class="field">
            <label>Mobile Number</label>
            <input type="tel" class="input" name="MobileNumber" required
                   value="@(Model?.MobileNumber ?? "")" placeholder="Mobile Number">
        </div>

        <div class="field">
            <label>Department ID</label>
            <input type="number" class="input" name="DepartmentId" required
                   value="@(Model?.DepartmentId > 0 ? Model.DepartmentId.ToString() : "")" placeholder="Department ID">
        </div>

        <div class="field">
            <label>Site / Plant</label>
            <input type="text" class="input" name="Site"
                   value="@(Model?.Site ?? "")" placeholder="Site">
        </div>

        <div class="field">
            <label>Shift</label>
            <select class="select" name="Shift">
                <option value="">Select Shift</option>
                @{
                    var shiftOptions = new Dictionary<string, string>
                                {
                                { "General", "General" },
                                { "Morning", "Morning" },
                                { "Night", "Night" },
                                { "Rotational", "Rotational" }
                                };

                    var currentShift = Model?.Shift ?? "";

                    foreach (var option in shiftOptions)
                    {
                        if (currentShift == option.Key)
                        {
                            <option value="@option.Key" selected>@option.Value</option>
                        }
                        else
                        {
                            <option value="@option.Key">@option.Value</option>
                        }
                    }
                }
            </select>
        </div>

        <div class="field">
            <label>Location</label>
            <input type="text" class="input" name="Location"
                   value="@(Model?.Location ?? "")" placeholder="Location">
        </div>

        <div class="field">
            <label>EAM Role</label>
            <select class="select" name="RoleId" required>
                <option value="">Select Role</option>
                @if (Model?.Roles != null)
                {
                    foreach (var role in Model.Roles)
                    {
                        if (Model.RoleId == role.RoleId)
                        {
                            <option value="@role.RoleId" selected>@role.RoleName</option>
                        }
                        else
                        {
                            <option value="@role.RoleId">@role.RoleName</option>
                        }
                    }
                }
            </select>
        </div>

        <div class="field">
            <label>User Active</label>
            <div class="switch-row">
                <span>User Active</span>
                <label class="switch">
                    <input type="checkbox" name="IsActive" checked>
                    <span class="slider"></span>
                </label>
            </div>
        </div>

    </div>

    <div class="form-actions">
        <button type="reset" class="btn btn-outline-secondary" id="resetBtn">
            <i class="fa-solid fa-rotate-left"></i> Cancel
        </button>
        <button type="submit" class="btn btn-success" id="submitBtn">
            <i class="fa-solid fa-user-plus"></i> Create User
        </button>
    </div>

</form>

<!-- ✅ Toast (NO Bootstrap) -->
<div class="toast-container">
    <div id="toast" class="toast">
        <div style="display: flex; align-items: center; gap: 10px;">
            <i class="toast-icon" id="toastIcon"></i>
            <div id="toastText">Message</div>
        </div>
        <i class="fa-solid fa-xmark toast-close" id="toastClose"></i>
    </div>
</div>

<script>
    // ============================================
    // DOM ELEMENT REFERENCES
    // ============================================
    const createForm = document.getElementById('createForm');
    const submitBtn = document.getElementById('submitBtn');
    const resetBtn = document.getElementById('resetBtn');
    const toast = document.getElementById('toast');
    const toastText = document.getElementById('toastText');
    const toastIcon = document.getElementById('toastIcon');
    const toastClose = document.getElementById('toastClose');

    // ============================================
    // FORM VALIDATION
    // ============================================
    function validateForm() {
        const email = document.querySelector('input[name="Email"]');
        const password = document.querySelector('input[name="Password"]');
        const mobile = document.querySelector('input[name="MobileNumber"]');
        const role = document.querySelector('select[name="RoleId"]');
        const empId = document.querySelector('input[name="EmployeeId"]');
        const fullName = document.querySelector('input[name="FullName"]');
        const userName = document.querySelector('input[name="UserName"]');
        const deptId = document.querySelector('input[name="DepartmentId"]');

        if (empId && !empId.value.trim()) {
            showToast('Employee ID is required!', 'error');
            empId.focus();
            return false;
        }

        if (fullName && !fullName.value.trim()) {
            showToast('Full Name is required!', 'error');
            fullName.focus();
            return false;
        }

        if (userName && !userName.value.trim()) {
            showToast('Username is required!', 'error');
            userName.focus();
            return false;
        }

        if (email && !email.value.trim()) {
            showToast('Email is required!', 'error');
            email.focus();
            return false;
        }

        if (password && password.value.length < 6) {
            showToast('Password must be at least 6 characters!', 'error');
            password.focus();
            return false;
        }

        if (mobile && !mobile.value.trim()) {
            showToast('Mobile number is required!', 'error');
            mobile.focus();
            return false;
        }

        if (deptId && !deptId.value.trim()) {
            showToast('Department ID is required!', 'error');
            deptId.focus();
            return false;
        }

        if (role && !role.value) {
            showToast('Please select a role!', 'error');
            role.focus();
            return false;
        }

        return true;
    }

    // ============================================
    // TOAST NOTIFICATIONS
    // ============================================
    function showToast(message, type = 'info') {
        // Set toast type
        toast.className = 'toast';
        if (type === 'success') {
            toast.classList.add('toast-success');
        } else if (type === 'error') {
            toast.classList.add('toast-error');
        }

        // Set icon based on type
        let iconClass = 'fa-solid fa-info-circle';
        if (type === 'success') iconClass = 'fa-solid fa-check-circle';
        if (type === 'error') iconClass = 'fa-solid fa-exclamation-circle';

        toastIcon.className = `toast-icon ${iconClass}`;
        toastText.textContent = message;

        // Show toast
        toast.classList.add('show');

        // Auto-hide after 5 seconds
        setTimeout(() => {
            toast.classList.remove('show');
        }, 5000);
    }

    // ============================================
    // EVENT LISTENERS
    // ============================================
    // Form submission
    if (createForm) {
        createForm.addEventListener('submit', function(e) {
            // Only validate registration form (no OTP step)
            if (!validateForm()) {
                e.preventDefault();
            } else {
                // Show loading state
                if (submitBtn) {
                    const originalText = submitBtn.innerHTML;
                    submitBtn.innerHTML = '<span class="spinner"></span> Creating...';
                    submitBtn.disabled = true;

                    // Reset button after 2 seconds (in case of error)
                    setTimeout(() => {
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                    }, 2000);
                }
            }
        });
    }

    // Reset button
    if (resetBtn) {
        resetBtn.addEventListener('click', function() {
            if (confirm('Are you sure you want to reset the form?')) {
                createForm.reset();
            }
        });
    }

    // Toast close button
    if (toastClose) {
        toastClose.addEventListener('click', function() {
            toast.classList.remove('show');
        });
    }

    // Auto-hide messages after 5 seconds
    setTimeout(() => {
        const alerts = document.querySelectorAll('.message-alert');
        alerts.forEach(alert => {
            alert.style.transition = 'opacity 0.5s ease';
            alert.style.opacity = '0';
            setTimeout(() => alert.remove(), 500);
        });
    }, 5000);
</script>