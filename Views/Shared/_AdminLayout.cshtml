<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>

    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-100">

    <div class="flex h-screen">

        <!-- SIDEBAR -->
        <aside class="w-64 bg-slate-900 text-slate-100 flex flex-col">
            <div class="px-6 py-4 text-xl font-bold border-b border-slate-700">
                Admin Panel
            </div>

            <nav class="flex-1 px-4 py-6 space-y-2">
                <a asp-area="Admin"
                   asp-controller="FormBuilder"
                   asp-action="Index"
                   class="block px-4 py-2 rounded hover:bg-slate-800">
                    📝 Form Builder
                </a>

                <a asp-area="Admin"
                   asp-controller="Reports"
                   asp-action="Index"
                   class="block px-4 py-2 rounded hover:bg-slate-800">
                    📊 Reports
                </a>

                <a href="#"
                   class="block px-4 py-2 rounded hover:bg-slate-800">
                    👥 Users
                </a>

                <a href="#"
                   class="block px-4 py-2 rounded hover:bg-slate-800">
                    ⚙️ Settings
                </a>
            </nav>

            <div class="px-4 py-4 border-t border-slate-700">
                <a asp-controller="User"
                   asp-action="Login"
                   class="block px-4 py-2 bg-red-600 rounded text-center">
                    Logout
                </a>
            </div>
        </aside>

        <!-- MAIN CONTENT -->
        <div class="flex-1 flex flex-col">

            <!-- TOP BAR -->
            <header class="h-14 bg-white border-b flex items-center px-6 shadow-sm">
                <h1 class="text-lg font-semibold">
                    @ViewData["Title"]
                </h1>
            </header>

            <!-- PAGE CONTENT -->
            <main class="flex-1 p-6 overflow-auto">
                @RenderBody()
            </main>
        </div>

    </div>

</body>
</html>
