<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - User</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>

<body class="bg-slate-100">
    <div class="flex h-screen">
        <!-- SIDEBAR -->
        <aside class="w-64 bg-indigo-900 text-indigo-100 flex flex-col">
            <div class="px-6 py-4 text-xl font-bold border-b border-indigo-700">
                User Panel
            </div>

            <nav class="flex-1 px-4 py-6 space-y-2">
                <a asp-controller="Dashboard" asp-action="Index"
                   class="flex items-center gap-3 px-4 py-2 rounded hover:bg-indigo-800 transition-colors">
                    <i class="fa-solid fa-gauge w-5 h-5"></i>
                    <span>🏠 Dashboard</span>
                </a>

                <!-- Include FormsSidebar partial -->
                @{
                    // Get forms from ViewBag or fetch directly
                    var sidebarForms = ViewBag.SidebarForms as List<MvcWebApiSwaggerApp.Models.FormSummary>;
                }

                @if (sidebarForms == null)
                {
                    // If not in ViewBag, create empty list
                    sidebarForms = new List<MvcWebApiSwaggerApp.Models.FormSummary>();
                }

                @await Html.PartialAsync("FormsSidebar", sidebarForms)

                <!-- Rest of navigation -->
                <a href="#" class="flex items-center gap-3 px-4 py-2 rounded hover:bg-indigo-800 transition-colors">
                    <i class="fa-solid fa-user w-5 h-5"></i>
                    <span>👤 Profile</span>
                </a>
                <a href="#" class="flex items-center gap-3 px-4 py-2 rounded hover:bg-indigo-800 transition-colors">
                    <i class="fa-solid fa-bell w-5 h-5"></i>
                    <span>🔔 Notifications</span>
                </a>
                <a href="#" class="flex items-center gap-3 px-4 py-2 rounded hover:bg-indigo-800 transition-colors">
                    <i class="fa-solid fa-gear w-5 h-5"></i>
                    <span>⚙️ Settings</span>
                </a>
            </nav>

            <div class="px-4 py-4 border-t border-indigo-700">
                <a asp-controller="User" asp-action="Logout"
                   class="flex items-center justify-center gap-2 px-4 py-2 bg-red-600 rounded text-center hover:bg-red-700 transition-colors">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <!-- MAIN CONTENT -->
        <div class="flex-1 flex flex-col">
            <header class="h-14 bg-white border-b flex items-center px-6 shadow-sm">
                <h1 class="text-lg font-semibold">
                    @ViewData["Title"]
                </h1>
            </header>

            <main class="flex-1 p-6 overflow-auto">
                @RenderBody()
            </main>
        </div>
    </div>
</body>
</html>