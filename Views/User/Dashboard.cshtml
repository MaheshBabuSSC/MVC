        // ============================================
        // FORM SEARCH FUNCTIONALITY
        // ============================================
        function initializeSearch() {
            const searchInput = document.querySelector('input[placeholder="Search forms..."]');
            if (searchInput) {
                searchInput.addEventListener('input', function(e) {
                    const searchTerm = e.target.value.toLowerCase();
                    const formCards = document.querySelectorAll('.card-hover');

                    formCards.forEach(card => {
                        const title = card.querySelector('h3').textContent.toLowerCase();
                        const description = card.querySelector('p.text-slate-300')?.textContent.toLowerCase() || '';

                        if (title.includes(searchTerm) || description.includes(searchTerm)) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                });
            }
        }

        // ============================================
        // NOTIFICATION BELL ANIMATION
        // ============================================
        function initializeNotifications() {
            const notificationBell = document.querySelector('.fa-bell');
            if (notificationBell) {
                // Add subtle animation to notification bell
                setInterval(() => {
                    notificationBell.style.transform = 'rotate(10deg)';
                    setTimeout(() => {
                        notificationBell.style.transform = 'rotate(-10deg)';
                    }, 300);
                    setTimeout(() => {
                        notificationBell.style.transform = 'rotate(0deg)';
                    }, 600);
                }, 10000); // Every 10 seconds
            }
        }

        // ============================================
        // PROGRESS BARS ANIMATION
        // ============================================
        function animateProgressBars() {
            const progressBars = document.querySelectorAll('.bg-gradient-to-r.from-indigo-500.to-purple-600');
            progressBars.forEach(bar => {
                // Animate from 0% to current width
                const currentWidth = bar.style.width || '0%';
                bar.style.width = '0%';

                setTimeout(() => {
                    bar.style.transition = 'width 1.5s ease-in-out';
                    bar.style.width = currentWidth;
                }, 500);
            });
        }

        // ============================================
        // CARD HOVER EFFECTS
        // ============================================
        function initializeCardHoverEffects() {
            const cards = document.querySelectorAll('.card-hover');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    const icon = this.querySelector('.fa-file-circle-check, .fa-file-circle-xmark');
                    if (icon) {
                        icon.style.transform = 'scale(1.2)';
                        icon.style.transition = 'transform 0.3s ease';
                    }
                });

                card.addEventListener('mouseleave', function() {
                    const icon = this.querySelector('.fa-file-circle-check, .fa-file-circle-xmark');
                    if (icon) {
                        icon.style.transform = 'scale(1)';
                    }
                });
            });
        }

        // ============================================
        // LOADING STATES
        // ============================================
        function simulateLoading() {
            // Show shimmer effect on cards for 1 second
            const cards = document.querySelectorAll('.card-hover');
            cards.forEach(card => {
                card.classList.add('shimmer');
            });

            setTimeout(() => {
                cards.forEach(card => {
                    card.classList.remove('shimmer');
                });

                // Animate progress bars after loading
                animateProgressBars();
            }, 1000);
        }

        // ============================================
        // KEYBOARD SHORTCUTS
        // ============================================
        function initializeKeyboardShortcuts() {
            document.addEventListener('keydown', function(e) {
                // Ctrl/Cmd + F to focus search
                if ((e.ctrlKey || e.metaKey) && e.key === 'f') {
                    e.preventDefault();
                    const searchInput = document.querySelector('input[placeholder="Search forms..."]');
                    if (searchInput) {
                        searchInput.focus();
                    }
                }

                // Ctrl/Cmd + / to open notifications
                if ((e.ctrlKey || e.metaKey) && e.key === '/') {
                    e.preventDefault();
                    const notificationBtn = document.querySelector('.fa-bell').closest('button');
                    if (notificationBtn) {
                        notificationBtn.click();
                    }
                }
            });
        }

        // ============================================
        // INITIALIZATION
        // ============================================
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize all features
            initializeCharts();
            initializeSearch();
            initializeNotifications();
            initializeCardHoverEffects();
            initializeKeyboardShortcuts();

            // Simulate initial loading
            simulateLoading();

            // Add spin animation for statistics chart
            const style = document.createElement('style');
            style.textContent = `
                @@keyframes spin-slow {
                    0% { transform: rotate(0deg); }
                    100% { transform: rotate(360deg); }
                }
                .animate-spin-slow {
                    animation: spin-slow 3s linear infinite;
                }
            `;
            document.head.appendChild(style);

            // Add click effects to all buttons
            const buttons = document.querySelectorAll('button, a[href]');
            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    // Add ripple effect
                    const ripple = document.createElement('span');
                    const rect = this.getBoundingClientRect();
                    const size = Math.max(rect.width, rect.height);
                    const x = e.clientX - rect.left - size / 2;
                    const y = e.clientY - rect.top - size / 2;

                    ripple.style.cssText = `
                        position: absolute;
                        border-radius: 50%;
                        background: rgba(255, 255, 255, 0.3);
                        transform: scale(0);
                        animation: ripple 0.6s linear;
                        width: ${size}px;
                        height: ${size}px;
                        top: ${y}px;
                        left: ${x}px;
                        pointer-events: none;
                    `;

                    this.appendChild(ripple);

                    setTimeout(() => {
                        ripple.remove();
                    }, 600);
                });
            });

            // Add ripple animation style
            const rippleStyle = document.createElement('style');
            rippleStyle.textContent = `
                @@keyframes ripple {
                    to {
                        transform: scale(4);
                        opacity: 0;
                    }
                }
            `;
            document.head.appendChild(rippleStyle);
        });

        // ============================================
        // WINDOW RESIZE HANDLING
        // ============================================
        window.addEventListener('resize', function() {
            // Reinitialize any responsive elements
            initializeCardHoverEffects();
        });
    </script>
